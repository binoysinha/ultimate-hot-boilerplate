{
  "compilerOptions": {
    "outDir": ".build.ts",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noUnusedLocals": true,
    "allowJs": true,
    "jsx": "react"
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ],
  "exclude": [
    "./client/utils/action-manager/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
