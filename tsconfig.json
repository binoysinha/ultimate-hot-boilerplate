{
  "compilerOptions": {
    "outDir": ".build.ts",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noUnusedLocals": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./client/*"
      ]
    }
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "useCache": true,
    "useBabel": true
  }
}
